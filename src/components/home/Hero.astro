---
import { getLangFromUrl, useTranslations } from '../../utils/i18n/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section>
    <h2 set:html={t('hero.title')} />
</section>

<style lang="scss">
    @use '/src/styles/variables' as *;

    section {
        padding: 120px 0;
        width: 100%;
        min-width: 100%;

        @media (max-width: 800px) {
            padding-top: 80px;
            padding-bottom: 60px;
        }

        h2 {
            margin: 0;
            color: $black;
            font-weight: 500;
            font-size: 6vw;
            line-height: 8vw;

            @media (min-width: 1980px) {
                font-size: 120px;
                line-height: 160px;
            }

            @media (max-width: 650px) {
                font-size: 8vw;
                line-height: 11vw;
            }
        }
    }
</style>
