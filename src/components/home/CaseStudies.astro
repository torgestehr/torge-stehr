---
import torgestehr from '../../assets/saysync.jpg';
import { getLangFromUrl, useTranslations, useLocalLink } from '../../utils/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const link = useLocalLink(lang);
---

<section>
    <div class="case">
        <h2 class="title">{t('casestudy1.title')}</h2>
        <div>
            <h3>SaySync</h3>
            <p>{t('casestudy1.text')}</p>
            <a href={link('/saysync')} title={t('casestudy1.link')}>{t('casestudy1.link')}</a>
        </div>
        <a href={link('/saysync')} title={t('casestudy1.link')} class="picture">
            <img src={torgestehr.src} alt="SaySync" title="SaySync" fetchpriority="high" />
        </a>
    </div>
</section>

<style lang="scss">
    @use '/src/styles/variables' as *;

    section {
        display: flex;
        align-items: flex-start;
        justify-content: flex-start;
        flex-direction: column;
        width: 100%;
        min-width: 100%;

        .case {
            position: relative;
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            align-items: center;
            justify-content: flex-start;
            gap: 30px;
            width: 100%;
            padding: 30px 0;
            border-top: 2px solid $black;

            .title {
                position: absolute;
                top: 20px;
                margin: 0;
                padding-left: 16px;
                color: $black;
                font-weight: 500;
                font-size: 16px;
                line-height: 20px;
                text-transform: uppercase;
                transition: color 0.3s cubic-bezier(0.47, 0, 0.745, 0.715);

                &::before {
                    content: '';
                    position: absolute;
                    top: 50%;
                    left: 0;
                    transform: translateY(-50%);
                    width: 10px;
                    height: 10px;
                    border-radius: 50%;
                    background: $black;
                }
            }

            .picture {
                display: flex;
                align-items: flex-end;
                justify-content: flex-end;
                padding-left: 30px;
                border-left: 2px solid $black;

                img {
                    width: 100%;
                    height: auto;
                    transition: border-radius 0.3s cubic-bezier(0.47, 0, 0.745, 0.715);
                }

                &:hover {
                    img {
                        border-radius: 10%;
                    }
                }
            }

            div {
                display: flex;
                align-items: flex-start;
                justify-content: flex-start;
                flex-direction: column;
                padding-right: 4vw;

                h3 {
                    margin: 0;
                    margin-bottom: 25px;
                    color: $black;
                    font-size: 64px;
                    font-weight: 500;
                }

                p {
                    margin: 0;
                    margin-bottom: 50px;
                    color: $black;
                    font-size: 25px;
                    line-height: 38px;
                }

                a {
                    margin: 0;
                    color: $primary;
                    text-transform: uppercase;
                    text-decoration: none;
                    border: 2px solid $primary;
                    border-radius: 32px;
                    padding: 16px 24px;
                    font-size: 16px;
                    font-weight: 500;
                    letter-spacing: 0.5px;
                    transition:
                        color 0.3s cubic-bezier(0.47, 0, 0.745, 0.715),
                        background-color 0.3s cubic-bezier(0.47, 0, 0.745, 0.715);

                    &:hover {
                        color: #fff;
                        background-color: $primary;
                    }
                }
            }
        }
    }
</style>
