---
import { getLangFromUrl, useTranslations } from '../utils/i18n/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer>
    <div class="contact">
        <p class="title">{t('footer.title')}</p>
        <h2>
            {t('footer.contact')}
            <br />
            <a href="mailto:hello@torgestehr.com" title="hello@torgestehr.com">hello@torgestehr.com</a>
        </h2>
    </div>
    <div class="socials">
        <a href="https://www.linkedin.com/in/torge-stehr" title="LinkedIn">LinkedIn</a>
        <a href="https://github.com/torgestehr" title="GitHub">GitHub</a>
        <a href="" title="YouTube">YouTube</a>
    </div>
</footer>

<style lang="scss">
    @use '/src/styles/variables' as *;

    .contact {
        position: relative;
        display: flex;
        align-items: flex-start;
        justify-content: flex-start;
        flex-direction: column;
        margin: 0 4vw;
        padding: 140px 0;
        width: calc(100% - 8vw);
        min-width: calc(100% - 8vw);
        border-top: 2px solid $black;

        .title {
            position: absolute;
            top: 20px;
            margin: 0;
            padding-left: 16px;
            color: $black;
            font-weight: 500;
            font-size: 16px;
            line-height: 20px;
            text-transform: uppercase;
            transition: color 0.3s cubic-bezier(0.47, 0, 0.745, 0.715);

            &::before {
                content: '';
                position: absolute;
                top: 50%;
                left: 0;
                transform: translateY(-50%);
                width: 10px;
                height: 10px;
                border-radius: 50%;
                background: $black;
            }
        }

        h2 {
            margin: 0;
            margin-bottom: 10px;
            color: $black;
            font-weight: 500;
            font-size: 6vw;
            line-height: 7vw;

            a {
                position: relative;
                color: $primary;
                text-decoration: none;

                &::before {
                    content: '';
                    position: absolute;
                    bottom: -20px;
                    left: 0;
                    transform: translateY(-50%);
                    width: 100%;
                    height: 9px;
                    background: $primary;
                    display: none;
                }

                &:hover {
                    &::before {
                        display: block;
                    }
                }
            }
        }
    }

    .socials {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        border-top: 2px solid $black;

        a {
            margin: 0;
            color: $black;
            font-size: 64px;
            font-weight: 500;
            text-decoration: none;
            padding: 70px 4vw;
            border-right: 2px solid $black;

            &:last-child {
                border-right: none;
            }
        }
    }
</style>
